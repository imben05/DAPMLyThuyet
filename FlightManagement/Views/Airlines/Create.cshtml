@model FlightManagement.Models.Airline

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "Airlines", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>Thêm mới Hãng Hàng Không</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.airlineName, "Tên Airline", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.airlineName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.airlineName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.code, "Code", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.logoUrl, "Nhập URL Logo", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.logoUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.logoUrl, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-10 offset-sm-2">
                        <small class="text-muted">Hoặc chọn File ảnh Logo:</small>
                        <input type="file" id="logoUrl" name="logoUrl" accept="image/*" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <input type="submit" value="Thêm" class="btn btn-success" />
                        <a class="btn btn-danger" href="/Airlines/Index">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        /* Form and Card Styling */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding-top: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-size: 1.25rem;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        /* Label and Input Styling */
        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            font-size: 1rem;
            padding: 10px;
            border-radius: 5px;
        }

        .col-sm-2 {
            font-weight: bold;
        }

        .text-danger {
            color: #dc3545;
        }

        /* Buttons */
        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-success:hover,
            .btn-danger:hover {
                opacity: 0.9;
            }

        /* File input */
        input[type="file"] {
            font-size: 1rem;
        }

        /* Custom small text */
        small.text-muted {
            font-size: 0.9rem;
            display: block;
            margin-top: 5px;
        }

        /* Validation Messages */
        .text-danger {
            font-size: 0.9rem;
            color: #dc3545;
        }

    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
