@model FlightManagement.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    }
@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container mt-3">
        <div class="row g-3 align-items-center">
            <div class="col-sm-4">
                <div class="row" style="border: 2px solid #E5F7F7; padding: 10px; border-radius: 20px; top: 80px; left: 100px; margin: auto; position: relative;background-color:#ffff">
                    <h4 class="text-center">Đăng ký vào hệ thống!</h4>
                    <p class="text-center">Xin mời bạn nhập đầy đủ thông tin đăng ký.</p>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.lastName, "Họ")
                        <div>
                            @Html.TextBoxFor(model => model.lastName, new { @placeholder = "Họ", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                            <p style="color:red;">@ViewBag.Alert</p>
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.firstName, "Tên")
                        <div>
                            @Html.TextBoxFor(model => model.firstName, new { @placeholder = "Tên", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                            <p style="color:red;">@ViewBag.Alert</p>
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.username, "Tài khoản")
                        <div>
                            @Html.TextBoxFor(model => model.username, new { @placeholder = "Tài khoản", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            <p style="color:red;"> @ViewBag.CanhBao</p>

                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.password, "Mật khẩu")
                        <div style="padding:0px 0px 10px 0px">
                            @Html.PasswordFor(model => model.password, new { @placeholder = "Mật khẩu", @class = "form-control", @type = "Password" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-uppercase btn-success">Đăng ký</button>
                    <p class="p-xs mt-2 text-center">
                        Bạn đã có tài khoản? <a href="~/Login/Login"><u>Đăng nhập</u></a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
}