@model IEnumerable<FlightManagement.Models.Hotel>

@{
    ViewBag.Title = "SearchHotel";
}

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h2 class="card-title">Kết quả Tìm kiếm Khách sạn</h2>
            <a class="btn btn-success" href="/UserHome/Index">Quay lại</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning text-center">
            @ViewBag.Message
        </div>
    }
    else if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover table-striped shadow">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên khách sạn</th>
                    <th scope="col">Địa điểm</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Thông tin liên hệ</th>
                    <th scope="col">Số sao</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col">Giá phòng</th>
                    <th scope="col">Số lượng phòng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <td>@hotel.NameHotel</td>
                        <td>@hotel.Location</td>
                        <td>@hotel.Address</td>
                        <td>@hotel.Phone</td>
                        <td>@hotel.StarRange <span class="text-warning">&#9733;</span></td>
                        <td>@hotel.Decripstion</td>
                        <td>@hotel.RoomPrice.</td>
                        <td>@hotel.RoomCount</td>
                        <td>@Html.ActionLink("Đặt Phòng", "BookHotel", new { id = hotel.IdHotel}, new { @class = "btn btn-primary" }) </td>
                    </tr>
                    

                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Không tìm thấy khách sạn nào phù hợp.</p>
    }
</div>
