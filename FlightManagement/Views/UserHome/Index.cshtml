            });
        });

        function getQueryParameter(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        // Hàm để chuyển đổi loại tìm kiếm
        function toggleSearchType(type) {
            // Lấy các phần tử của form khác nhau
            const flightForm = document.getElementById('flightForm');
            const hotelForm = document.getElementById('hotelForm');

            // Ẩn tất cả form
            flightForm.style.display = 'none';
            hotelForm.style.display = 'none';

            // Hiển thị form tương ứng với loại chuyến đi được chọn
            if (type === 'flight') {
                flightForm.style.display = 'block';
            } else if (type === 'hotel') {
                hotelForm.style.display = 'block';
            }

            // Thay đổi nút kích hoạt
            document.querySelectorAll('.trip-type button').forEach(button => {
                button.classList.remove('active');
            });
            document.getElementById(type).classList.add('active');
        }
        function redirectToPage(filePath) {
            window.location.href = filePath;
        }

        document.getElementById("searchForm").onsubmit = function () {
        var departureCity = document.getElementById("departureCity").value.trim();
        var arrivalCity = document.getElementById("arrivalCity").value.trim();
        var departureTime = document.getElementById("departureTime").value.trim();

        if (departureCity === "" || arrivalCity === "" || departureTime === "") {
